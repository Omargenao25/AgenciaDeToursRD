@model AgenciaDeToursRD.Models.Destino
@{
    var i = (int)ViewData["index"];
}

<tr>
    <td>
        <input type="hidden" name="Destinos[@i].ID" value="@Model.ID" />
        <input type="text" name="Destinos[@i].Nombre" value="@Model.Nombre" class="form-control" />
    </td>
    <td>
        <input type="text" name="Destinos[@i].DuracionTexto" value="@Model.DuracionTexto" class="form-control" />
    </td>
    <td class="text-center">
        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeDestino(this)">
            <i class="bi bi-x-lg"></i>
        </button>
    </td>
</tr>