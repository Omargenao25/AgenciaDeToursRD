@model AgenciaDeToursRD.Models.Pais

@{
    ViewData["Title"] = "Crear País";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="BanderaFile" class="form-label">Subir Bandera (opcional)</label>
        <input type="file" class="form-control" id="BanderaFile" name="BanderaFile" accept=".jpg,.jpeg,.png" />
    </div>

    <h4>Destinos</h4>

    <div id="destinosContainer">
        @if (Model.Destinos != null && Model.Destinos.Any())
        {
            for (int i = 0; i < Model.Destinos.Count; i++)
            {
                <div class="mb-3">
                    <label>Nombre del Destino</label>
                    <input name="Destinos[@i].Nombre" value="@Model.Destinos.ElementAt(i).Nombre" class="form-control" />
                </div>
            }
        }
        else
        {
            <div class="mb-3">
                <label>Nombre del Destino</label>
                <input name="Destinos[0].Nombre" class="form-control" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}