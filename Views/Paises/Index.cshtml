@model List<AgenciaDeToursRD.Models.Pais>

@{
    ViewData["Title"] = "Listado de Países";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4">Listado de Países</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Agregar País</a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var pais in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(pais.Bandera))
                    {
                        <img src="@pais.Bandera" class="card-img-top img-fluid" style="object-fit: cover; height: 200px;" alt="Bandera de @pais.Nombre">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Sin imagen</span>
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@pais.Nombre</h5>
                        <p class="card-text">
                            Destinos registrados: <strong>@(pais.Destinos?.Count() ?? 0)</strong>
                        </p>
                    </div>

                    <div class="card-footer bg-white d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@pais.ID" class="btn btn-outline-primary btn-sm">Ver</a>
                        <a asp-action="Edit" asp-route-id="@pais.ID" class="btn btn-outline-secondary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@pais.ID" class="btn btn-outline-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>