@model AgenciaDeToursRD.Models.Pais
@{
    ViewData["Title"] = "Editar País";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4">Editar País</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Imagen de la Bandera (JPG o PNG)</label>
            <input type="file" name="BanderaFile" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.Bandera))
            {
                <div class="mt-2">
                    <p class="text-muted">Imagen actual:</p>
                    <img src="@Model.Bandera" style="max-height: 100px;" />
                </div>
            }
        </div>

        <h5 class="mt-4">Destinos</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Duración</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody id="destinosBody">
                @for (int i = 0; i < Model.Destinos?.Count; i++)
                {
                    <tr>
                        <td>
                            <input name="Destinos[@i].Nombre" class="form-control" value="@Model.Destinos.ElementAt(i).Nombre" required />
                        </td>
                        <td>
                            <input name="Destinos[@i].DuracionTexto" class="form-control" value="@Model.Destinos.ElementAt(i).DuracionTexto" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" onclick="eliminarFila(this)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="button" class="btn btn-secondary mb-3" onclick="agregarFila()">Agregar Destino</button>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function agregarFila() {
            const index = document.querySelectorAll('#destinosBody tr').length;
            const row = `
        <tr>
        <td>
        <input name="Destinos[${index}].Nombre" class="form-control" required />
        </td>
        <td>
        <input name="Destinos[${index}].DuracionTexto" class="form-control" />
        </td>
        <td>
        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarFila(this)">Eliminar</button>
        </td>
        </tr>`;
            document.getElementById("destinosBody").insertAdjacentHTML("beforeend", row);
        }

        function eliminarFila(btn) {
            const row = btn.closest('tr');
            row.remove();
        }
    </script>
}

