@model IEnumerable<AgenciaDeToursRD.Models.Tour>

@{
    ViewBag.Title = "Lista de Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">🧭 Lista de Tours Disponibles</h2>

@if (ViewBag.InfoMessage != null)
{
    <div class="alert alert-info">@ViewBag.InfoMessage</div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="d-flex justify-content-between mb-3">
    <div>
        <a href="@Url.Action("ExportToursToCsv", "Tours")" class="btn btn-primary">
            📄 Exportar a CSV
        </a>
    </div>

    @Html.ActionLink("✚ Agregar nuevo tour", "Create", "Tours", null, new { @class = "btn btn-success" })
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        No hay tours registrados por el momento. ¡Agrega el primero! 🌎
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Duración</th>
                    <th>Precio</th>
                    <th>ITBIS</th>
                    <th>Fecha Fin</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tour in Model)
                {
                    <tr>
                        <td>@tour.Nombre</td>
                        <td>@tour.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@tour.Hora</td>
                        <td>@(tour.Duracion)</td> 
                        <td>@tour.Precio.ToString("C")</td>
                        <td>@tour.ITBIS.ToString("C")</td>
                        <td>@tour.FechaFin.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@tour.Estado</td>
                        <td class="text-center">
                            @Html.ActionLink("Detalles", "Details", new { id = tour.ID }, new { @class = "btn btn-primary btn-sm me-1" })
                            @Html.ActionLink("Editar", "Edit", new { id = tour.ID }, new { @class = "btn btn-warning btn-sm me-1" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = tour.ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
