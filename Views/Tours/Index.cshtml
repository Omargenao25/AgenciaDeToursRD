@model List<AgenciaDeToursRD.Models.Tour>

@{
    ViewData["Title"] = "Listado de tours";
}

<h2>Tours disponibles</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Destino</th>
            <th>País</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Precio</th>
            <th>ITBIS</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.Nombre</td>
                <td>@tour.Destino?.Nombre</td>
                <td>@tour.Pais?.Nombre</td>
                <td>@tour.Fecha.ToShortDateString()</td>
                <td>@tour.Hora.ToString(@"hh\:mm")</td>
                <td>$@tour.Precio.ToString("F2")</td>
                <td>$@tour.ITBIS.ToString("F2")</td>
                <td>@tour.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tour.ID" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@tour.ID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Agregar nuevo tour</a>