@model AgenciaDeToursRD.Models.Tour

@{
    ViewBag.Title = "Editar Tour";
}

<h2 class="mb-4">Editar tour</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("Edit", "Tours", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-4 bg-light">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.DestinoID)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="mb-3">
            @Html.Label("País")
            <input type="text" class="form-control" value="@ViewBag.NombrePais" readonly />
            @Html.HiddenFor(model => model.PaisID)
        </div>


        <div class="mb-3">
            @Html.Label("Destino")
            <input type="text" id="DestinoNombre" class="form-control" value="@ViewBag.NombreDestino" readonly data-duracion="@ViewBag.DuracionDestino" />
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Fecha)
            @Html.TextBoxFor(model => model.Fecha, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "Fecha" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Hora)
            @Html.TextBoxFor(model => model.Hora, "{0:hh\\:mm}", new { @type = "time", @class = "form-control", @id = "Hora" })
        </div>

        <div class="mb-3">
            @Html.Label("Fecha Fin")
            <input type="text" id="FechaFinTexto" name="FechaFin" class="form-control" value="@ViewBag.FechaFin" readonly />
        </div>

        <div class="mb-3">
            @Html.Label("Estado")
            <input type="text" id="EstadoTexto" name="Estado" class="form-control" value="@ViewBag.Estado" readonly />
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Precio)
            @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", step = "0.01", type = "number", @id = "Precio" })
        </div>

        <div class="mb-3">
            @Html.Label("ITBIS")
            <input type="text" id="ITBISTexto" name="ITBIS" class="form-control" value="@ViewBag.ITBIS" readonly />
        </div>

        <button type="submit" class="btn btn-success">Actualizar</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Fecha, #Hora').change(actualizarVista);
            $('#Precio').on('input', function () {
                const precio = parseFloat($(this).val());
                const itbis = isNaN(precio) ? 0 : (precio * 0.18).toFixed(2);
                $('#ITBISTexto').val(itbis);
            });

            $('#Precio').trigger('input');
            actualizarVista();

            function actualizarVista() {
                const duracion = $('#DestinoNombre').attr('data-duracion');
                const fecha = $('#Fecha').val();
                const hora = $('#Hora').val();

                if (!duracion || !fecha || !hora) {
                    $('#FechaFinTexto, #EstadoTexto').val('');
                    return;
                }

                const match = duracion.match(/(\d+)\s*d[ií]as?/i);
                const dias = match ? parseInt(match[1]) : 0;

                const fechaHoraInicio = new Date(fecha + 'T' + hora);
                fechaHoraInicio.setDate(fechaHoraInicio.getDate() + dias);

                const fechaFinStr = fechaHoraInicio.toLocaleString('es-ES', {
                    day: '2-digit', month: '2-digit', year: 'numeric',
                    hour: '2-digit', minute: '2-digit'
                });

                $('#FechaFinTexto').val(fechaFinStr);

                const ahora = new Date();
                const estado = fechaHoraInicio > ahora ? 'Vigente' : 'Vencido';

                $('#EstadoTexto').val(estado);
            }
        });
    </script>
}
